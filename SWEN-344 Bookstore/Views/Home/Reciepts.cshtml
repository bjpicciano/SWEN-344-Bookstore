<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
</head>
<body>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
@{
    ViewBag.Title = "Reciepts";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<List<String>> info = ViewData["bookInfo"] as List<List<String>>;

}
<h2>Past Purchases</h2>
<table border="1">
    <tr>
        <th>
            Date Purchased
        </th>
        <th>
            Title
        </th>
        <th>
            Author
        </th>
        <th>
            Description
        </th>
        <th>
            Price
        </th>
    </tr>
    @foreach (var line in info)
    {
        <tr>
            @for (int i = 0; i < 4; i++)
            {
                <td>
                    @line[i]
                </td>

            }
            <td>
                <!--button-->
                <button type="button" class="btn btn-default btn-xs" data-toggle="modal" data-target=@("#popup_" + line[4])>View Book</button>
                <!-- Modal -->
                <div class="modal fade" id=@("popup_" + line[4]) role="dialog">
                    <div class="modal-dialog">
                        <!-- Modal content-->
                        <div class="modal-content">
                            <div class="modal-header">
                                <button type="button" class="close" data-dismiss="modal">&times;</button>
                                <h4 class="modal-title">@line[0]</h4>
                            </div>
                            <div class="modal-body">
                                <h6>Author:</h6>
                                <br />
                                <p>@line[1]</p>
                                <br />
                                <h6>Description</h6>
                                <br />
                                <p>@line[2]</p>
                                <br />
                                <h6>Price</h6>
                                <br />
                                <p>@line[3]</p>
                                <br />
                                <h6>Reviews</h6>
                                <p>Reviews Go Here</p>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-primary">Write a Review</button>
                                <!-- Modal content-->
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                                        <h4 class="modal-title">@("Write a Review for" + line[0])</h4>
                                    </div>
                                    <div class="modal-body">
                                        <form>
                                            <div class="form-group">
                                                <label for="review">Write Review</label>
                                                <input type="text" class="form-control" id="review" placeholder="Enter Review" />

                                            </div>
                                        </form>
                                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                                    </div>
                                </div>
                            </div>
                </div>
            </td>
        </tr>
    }
</table>
</html>